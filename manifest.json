{
  "manifest_version": 3,
  "name": "Leeco AI Clone - Learning Companion",
  "version": "1.0.0",
  "description": "Complete Leeco AI clone - AI-powered learning companion for coding interview preparation and educational content consumption",
  
  "permissions": [
    "activeTab",
    "storage",
    "https://generativelanguage.googleapis.com/*"
  ],
  
  "host_permissions": [
    "https://leetcode.com/*",
    "https://www.youtube.com/*",
    "https://*/*",
    "http://*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*"],
      "js": ["leetcode-content.js"],
      "css": ["styles.css"]
    },
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["youtube-content.js"],
      "css": ["styles.css"]
    },
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["general-content.js"],
      "css": ["styles.css"],
      "exclude_matches": [
        "https://leetcode.com/*",
        "https://www.youtube.com/*",
        "https://google.com/*",
        "https://www.google.com/*"
      ]
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["*.js", "*.css", "*.html", "icons/*"],
      "matches": ["https://leetcode.com/*", "https://www.youtube.com/*", "https://*/*", "http://*/*"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Leeco AI Clone - Learning Companion"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}